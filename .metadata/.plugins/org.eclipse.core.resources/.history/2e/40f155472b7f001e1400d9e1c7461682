			<td th:if="${book.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')"><a th:href="@{/editBook/{id}(id=${book.id})}" class="btn btn-dark btn-sm">Edit</a></td>
			<td th:if="${book.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')"><a th:href="@{/delete/{id}(id=${book.id})}" class="btn btn-xs btn-danger btn-sm">Delete</a></td>

<!-- Jos USERILLA ei muokkausoikeutta kyseiseen kirjaan -->	
<!-- 26102023 -->
			<td th:unless="${book.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')">   </td>
			<td th:unless="${book.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')">   </td>

