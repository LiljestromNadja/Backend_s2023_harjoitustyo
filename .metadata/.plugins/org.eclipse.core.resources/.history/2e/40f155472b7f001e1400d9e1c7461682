			<td sec:authorize="hasAuthority('ADMIN')"><a th:href="@{/delete/{id}(id=${book.id})}" class="btn btn-xs btn-danger btn-sm">Delete</a></td> 		
<!--Ota pois valmiista  -->			<td th:text="${book.id}"></td>

