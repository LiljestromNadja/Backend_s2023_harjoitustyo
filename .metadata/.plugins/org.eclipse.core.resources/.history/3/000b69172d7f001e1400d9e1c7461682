			<td th:text="${article?.applicationuser?.id}"></td>		
		
<!-- USER voi muokata/poistaa vain julkaisujaan, ADMIN kaikkia: -->	
<!-- 24102023 -->
			<td th:if="${article.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')"><a th:href="@{/editArticle/{id}(id=${article.id})}" class="btn btn-dark btn-sm">Edit</a></td>
			<td th:if="${article.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')"><a th:href="@{/delete/{id}(id=${article.id})}" class="btn btn-xs btn-danger btn-sm">Delete</a></td>

<!-- Jos USERILLA ei muokkausoikeutta kyseiseen kirjaan -->	
<!-- 26102023 -->
			<td th:unless="${article.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')">   </td>
			<td th:unless="${article.applicationuser.username == applicationuser.username}" sec:authorize="hasAuthority('USER')">   </td>

<!-- ADMIN voi muokata/poistaa kaikkia -->		
			<td sec:authorize="hasAuthority('ADMIN')"><a th:href="@{/editArticle/{id}(id=${article.id})}" class="btn btn-xs btn-dark btn-sm">Edit</a></td>	
			<td sec:authorize="hasAuthority('ADMIN')"><a th:href="@{/delete/{id}(id=${article.id})}" class="btn btn-xs btn-danger btn-sm">Delete</a></td> 		
<!--Ota pois valmiista  -->			<td th:text="${article.id}"></td>

<!-- Kirjan kommentit voi listata roolissa ADMIN tai USER -->			
	  		<td sec:authorize="hasAuthority('ADMIN') or hasAuthority('USER')"><a th:href="@{'/article/' + ${article.id} + '/comments'}" class="btn btn-light btn-sm">Comments</a></td>
		<!--	<td sec:authorize="hasAuthority('ADMIN') or hasAuthority('USER')"><a th:href="@{/listComments}" class="btn btn-xs btn-success btn-sm">Comments</a></td> -->




<!-- Kirjaa voi kommentoida ADMIN/USER -->
